<UserControl x:Class="YouTubeHelper.Views.MainControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
      xmlns:viewModels="clr-namespace:YouTubeHelper.ViewModels"
      xmlns:properties="clr-namespace:YouTubeHelper.Properties"
      d:DataContext="{d:DesignInstance Type=viewModels:MainControlViewModel, IsDesignTimeCreatable=True}"
      mc:Ignorable="d">
    <Grid>
        <!--<TextBlock Text="Watch" Visibility="{c:Binding WatchMode, FalseToVisibility=Collapsed}"/>
        <TextBlock Text="Search" Visibility="{c:Binding SearchMode, FalseToVisibility=Collapsed}"/>-->
        <TabControl ItemsSource="{Binding Channels}" SelectedItem="{Binding SelectedChannel}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Channel.Name}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <Grid Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Expander Grid.Row="0">
                            <Expander.Header>
                                <!-- Need to use this width hack in order for the header content to stretch horizontally -->
                                <!-- https://stackoverflow.com/a/680512/4206279 -->
                                <Grid Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Expander}}, Path=ActualWidth}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="Channel Settings"/>
                                    <Border Grid.Column="1" CornerRadius="2" Margin="10,8,24,5" HorizontalAlignment="Stretch" Background="{DynamicResource SystemControlBackgroundListLowBrush}"/>
                                </Grid>
                            </Expander.Header>


                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="0" Content="Channel" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <TextBox Grid.Column="2" Grid.Row="0" Text="{Binding Channel.Name, UpdateSourceTrigger=PropertyChanged, Delay=1000}" VerticalAlignment="Center" HorizontalAlignment="Left"/>

                                <Button Grid.Column="0" Grid.Row="1" Content="Delete" Command="{Binding DeleteCommand}"/>
                            </Grid>
                        </Expander>
                    </Grid>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
